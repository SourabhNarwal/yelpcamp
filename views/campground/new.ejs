<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">

            <form action="/campgrounds" method="post" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">TITLE</label>
                    <input class="form-control" type="text" name="camps[title]" id="tittle" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <label  class="form-label"for="location">location</label>
                    <input class="form-control" type="text" name="camps[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label"  for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-sign">$</span>
                        <input class="form-control" type="text" class="form-control" name="camps[price]" placeholder="price" value="0.00"
                            aria-label="Username" aria-describedby="price-sign" required>
                            <div class="valid-feedback">
                                Looks good!
                              </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label"  for="description">Description</label>
                    <textarea class="form-control" name="camps[description]" id="description" required cols="30" rows="10"></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                  
                  <div class="mt-3 mb-5 custom-file">
                    <label for="image" class="form-label">Choose Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <label for="image" class="custom-file-label text-muted"></label>
                  </div>
              
                <button class="btn btn-success">submit</button>
            </form>
            <footer><a href="/campgrounds">back to all</a></footer>
        </div>
    </div>

